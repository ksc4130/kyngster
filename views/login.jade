extends layout
block content
	article
		form
			header
				div.mess(data-bind="visible: mess().length > 0, text: mess")
			fieldset.center
				div
					label Email
					br
					input(data-bind="value: email")
				div
					label Password
					br
					input(data-bind="value: password", type="password")
				div
					input(type="button", style="float: none; margin-right: 20px;", data-bind="click: login", value="Login")
					input(type="button", value="Sign up", onclick="(function(){window.location='/register'}());")
block scripts
	script(src="/scripts/libs/knockout.validation.js")
	script(src="/viewmodels/login.js")
